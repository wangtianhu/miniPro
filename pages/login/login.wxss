/* pages/login/login.wxss */
.login-page {
  width: 100%;
  height: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.login-title {
  width: 100%;
  padding: 50rpx 0;
}
.login-title .title {
  width: 100%;
  font-size: 40rpx;
  font-weight: 400;
  line-height: 1;
}
.login-info {
  width: 100%;
}
.login-info .login-phone {
  width: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #cccccc;
  padding: 0 30rpx;
  margin-bottom: 50rpx;
}
.login-info .login-phone .login-phone-title {
  display: inline-block;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.login-info .login-phone .login-phone-input {
  display: inline-block;
  width: 100%;
  font-size: 28rpx;
  line-height: 40rpx;
  outline: none;
  line-height: 40rpx;
}

.login-btn {
  width: 100%;
  height: 80rpx;
}
.login-btn .btn {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  background: #ff0000;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
