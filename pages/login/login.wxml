<!-- pages/login/login.wxml -->
<view class="login-page">
    <view class="login-title">
        <text class="title">欢迎回来！</text>
    </view>
    <view class="login-info">
        <view class="login-phone">
            <text class="login-phone-title">手机号码</text>
            <input type="text" class="login-phone-input" data-id="phone" bindinput="checkPhone" />
        </view>
        <view class="login-phone">
            <text class="login-phone-title">密码</text>
            <input type="text" class="login-phone-input" data-id="password" bindinput="checkPhone" />
        </view>
    </view>
    <view class="login-btn" bindtap="clickLogin">
        <button class="btn">登录</button>
    </view>
</view>